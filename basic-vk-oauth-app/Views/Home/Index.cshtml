@model IEnumerable<basic_vk_oauth_app.Models.VkFriend>

@{
    ViewBag.Title = "Home";
}
<h4>Hello, @ViewBag.UserName</h4>
<h2>My Friends</h2>
<table class="table">
    <tr>

        @foreach (var value in Model)
        {
            <td style="padding-right: 100px">

                <img src="@Html.DisplayFor(modelItem => value.Img)" />
            </td>
        }

    </tr>
    <tr>

        @foreach (var value in Model)
        {
            <td style="padding-right: 100px">

                @Html.DisplayFor(modelItem => value.Name)
            </td>

        }
    </tr>
</table>

